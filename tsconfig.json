{
  "compilerOptions": {
    "module": "commonjs",
    "esModuleInterop": true,
    "target": "es6",
    "moduleResolution": "node",
    "sourceMap": true,
    "outDir": "dist",
    "baseUrl": ".",
    "paths": {
      "*": [
        "node_modules/*"
      ],
      "@controllers/*": [
        "src/controllers/*"
      ],
      "@models/*": [
        "src/models/*"
      ],
      "@routes/*": [
        "src/routes/*"
      ],
      "@utils/*": [
        "src/utils/*"
      ],
      "@typeStore/*": [
        "src/types/*"
      ]
    }
  },
  "include": [
    "**/*.ts"
  ]
}